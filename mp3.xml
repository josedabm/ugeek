    </itunes:owner>

    <itunes:image href="{{ site.url }}/logo-1400.jpg" />
    <image>
      <title>Build Podcast</title>
      <width>100</width>
      <height>100</height>
      <link>{{ site.url }}</link>
      <url>{{ site.url }}/logo-100.jpg</url>
    </image>
    <atom:link rel="self" type="application/rss+xml" title="Build Podcast" href="{{ site.url }}/feed.xml" />

